# Environment
NODE_ENV=production

# Server Configuration
PORT=3008
FRONTEND_URL=https://ozoda.biznesjon.uz
ADMIN_URL=https://admin.ozoda.biznesjon.uz

# Database
MONGODB_URI=mongodb://localhost:27017/furniture_crm
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/furniture_crm

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRE=30d

# SMS Configuration (Eskiz.uz)
SMS_API_URL=https://notify.eskiz.uz/api
SMS_API_TOKEN=your_sms_api_token_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL Configuration (for HTTPS)
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password