{
  "name": "furniture-installment",
  "version": "1.0.0",
  "description": "Mebel va maishiy texnika muddatli to'lov tizimi",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"bgBlue.bold,bgMagenta.bold\" \"nodemon server.js\" \"cd client && npm start\"",
    "dev:server": "nodemon server.js",
    "dev:client": "cd client && npm start",
    "dev:full": "concurrently --names \"SERVER,CLIENT,BOT\" --prefix-colors \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"nodemon server.js\" \"cd client && npm start\" \"echo Bot server.js da ishga tushadi\"",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "build:full": "npm install && cd client && npm install && npm run build && cd ..",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "echo \"No linting configured\" && exit 0",

    "heroku-postbuild": "npm run build:client"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "mustache": "^4.2.0",
    "node-cron": "^3.0.2",
    "pdfkit": "^0.13.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "installment",
    "furniture",
    "uzbekistan",
    "ozoda-mebel"
  ],
  "author": "Ozoda Mebel Team",
  "license": "MIT"
}
